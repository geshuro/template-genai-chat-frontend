apiVersion: apps/v1
kind: Deployment
metadata:
  name: "<%= owner_name %>-<%= repository_name %>"
  labels:
    app: "<%= owner_name %>"
    git_commit: "<%= git_commit %>"
    build_id: "<%= build_id %>"
    runtime: "Nginx"
    technology-stack: "angular.12"
spec:
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 10
      maxUnavailable: 1
  replicas: 1
  selector:
    matchLabels:
      pod: "<%= repository_name %>"
  progressDeadlineSeconds: 600
  template:
    metadata:
      name: "<%= owner_name %>-<%= repository_name %>"
      labels:
        app: "<%= owner_name %>"
        git_commit: "<%= git_commit %>"
        build_id: "<%= build_id %>"
        pod: "<%= repository_name %>"
    spec:
      serviceAccountName: "<%= owner_name %>-<%= environment %>-sa"
      volumes:
      - name: "<%= owner_name %>-<%= environment %>-volume"
        configMap:
          name: "<%= owner_name %>-<%= repository_name %>-settings"
      containers:
      - name: app
        image: "<%= docker_image %>"
        imagePullPolicy: IfNotPresent
        envFrom:
        - configMapRef:
            name: "<%= owner_name %>-<%= environment %>-configmap"
        ports:
        - containerPort: 8080
          name: http
        volumeMounts:
          - name: "<%= owner_name %>-<%= environment %>-volume"
            mountPath: /opt/app-root/src/assets/config/
---
apiVersion: v1
kind: Service
metadata:
  name: "<%= owner_name %>-<%= repository_name %>-service"
  labels:
    app: "<%= owner_name %>"
  annotations:
    cloud.google.com/neg: '{"ingress": true}'
    cloud.google.com/backend-config: '{ "ports": { "80" : "<%= owner_name %>-<%= environment %>-backendconfig" } }'
spec:
  ports:
  - name: http
    port: 80
    protocol: TCP
    targetPort: 8080
  selector:
    pod: "<%= repository_name %>"
  type: NodePort
---
apiVersion: v1
kind: ConfigMap
metadata:
  name: "<%= owner_name %>-<%= repository_name %>-settings"
  labels:
    app: "<%= owner_name %>"
data:
  config.js: |-
    {
       window.sessionStorage.setItem( 'server_url', "https://<%= dns_record %>" );
       window.sessionStorage.setItem( 'azure_app_client_id', "<%= azure_app_client_id %>" );
       window.sessionStorage.setItem( 'azure_authority', "<%= azure_authority %>" );
       window.sessionStorage.setItem( 'azure_redirect_uri', "https://<%= dns_record %>" );
       window.sessionStorage.setItem( 'azure_use_redirect', 0 );
       window.sessionStorage.setItem( 'dns_record_api', "https://<%= dns_record_api %>" );
       window.sessionStorage.setItem( 'gtm_tag', "<%= gtm_tag %>" );
       window.sessionStorage.setItem( 'gApiKey', "<%= api_key_gdrive %>" );
       window.sessionStorage.setItem( 'gClientId', "<%= client_id_oauth %>" );
    }
